<% include ../header %>
  <header class="row-fluid text-center">
    <h2>Ntalk - Dados do contato</h2>
  </header>
  <section class="row-fluid text-center">
    <form action="/contato/<%- id %>?_method=delete" method="post" class="well form-inline">
      <p><label>Nome:</label>
        <%- contato.nome %>
      </p>
      <p><label>E-mail:</label>
        <%- contato.email %>
      </p>
      <p>
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a href="/contato/<%- id %>/editar" class="btn btn-info">Editar</a>
      </p>
    </form>
  </section>
  <% include ../exit %>
    <% include ../footer %>